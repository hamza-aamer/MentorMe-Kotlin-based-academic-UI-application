<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#def8f8"
    tools:context=".UserFocusedScreen">


    <View
        android:id="@+id/topcolumn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/Title3"
        android:background="@drawable/rounded_corner"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#7fd9d3"
        app:layout_constraintTop_toBottomOf="@id/Title2"/>


    <ImageView
        android:id="@+id/pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/john"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/Title1"
        android:layout_marginRight="30dp"
        android:background="@drawable/imageround"
        android:padding="10dp"/>








    <TextView
        android:id="@+id/Title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/Title2"
        android:text="Drop me a review 🤩"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/Title1"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:lineSpacingExtra="15dp"/>




    <TextView
        android:id="@+id/BackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#157177"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/Title1"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Hi, I'm"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/experiencetext"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/Title3"
        android:paddingHorizontal="10dp"
        android:textSize="15dp"
        android:inputType="textMultiLine"
        android:hint="Type your experience..."
        android:gravity="top"
        android:padding="15dp"
        android:background="@drawable/borderedwhite"
        android:layout_marginHorizontal="25dp"
        />


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/experiencetext"

        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"
        android:layout_marginTop="15dp"/>




    <TextView
        android:id="@+id/Title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:clickable="true"
        android:gravity="left"
        android:text="John Cooper"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Title1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        tools:ignore="MissingConstraints" />





    <TextView
        android:clickable="true"
        android:id="@+id/SubmitFeedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/twofactorverifybutton"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="Submit Feedback"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>