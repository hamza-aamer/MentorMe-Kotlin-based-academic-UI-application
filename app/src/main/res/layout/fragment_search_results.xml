<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/empty"
    tools:context=".SearchFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/SearchFragment"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/BackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:text="←"
            android:textColor="#157177"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Results"
            app:layout_constraintTop_toBottomOf="@id/BackArrow"
            app:layout_constraintStart_toStartOf="@id/BackArrow"
            android:layout_marginStart="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#157177"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/title1"
            android:id="@+id/FilterList"
            android:background="@drawable/unselectedhorizontalscrollbce1e2"
            android:textSize="20dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            app:layout_constraintTop_toBottomOf="@id/FilterList"
            android:orientation="vertical">

            <FrameLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="#dadada"
                    android:src="@drawable/darkgreyround"/>

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="150dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lightgreyround"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Cooper"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1500/Session"
                        android:textSize="5dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:textColor="#ecb800"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="UX Designer @ Google"
                        android:textSize="8dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="● Available"
                        android:textColor="#3ead00"
                        android:textSize="8dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="❤"
                        android:layout_gravity="right"
                        android:textSize="8dp"
                        android:layout_marginRight="10dp"/>


                </FrameLayout>

            </FrameLayout>
            <FrameLayout
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="#dadada"
                    android:src="@drawable/darkgreyround"/>

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="150dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lightgreyround"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Martina Watson"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$500/Session"
                        android:textSize="5dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:textColor="#ecb800"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Lead - Technology Officer"
                        android:textSize="8dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="● Not Available"
                        android:textColor="#918c8c"
                        android:textSize="8dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="🤍"
                        android:layout_gravity="right"
                        android:textSize="8dp"
                        android:layout_marginRight="10dp"/>


                </FrameLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="#dadada"
                    android:src="@drawable/darkgreyround"/>

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="150dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lightgreyround"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emma"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$2000/Session"
                        android:textSize="5dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:textColor="#ecb800"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Lead - Corporate Manager"
                        android:textSize="8dp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="● Not Available"
                        android:textColor="#918c8c"
                        android:textSize="8dp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="🤍"
                        android:layout_gravity="right"
                        android:textSize="8dp"
                        android:layout_marginRight="10dp"/>


                </FrameLayout>

            </FrameLayout>


            <FrameLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#dadada"
                android:src="@drawable/darkgreyround"/>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/lightgreyround"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Cooper"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1500/Session"
                    android:textSize="5dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:textColor="#ecb800"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="UX Designer @ Google"
                    android:textSize="8dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="● Available"
                    android:textColor="#3ead00"
                    android:textSize="8dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="❤"
                    android:layout_gravity="right"
                    android:textSize="8dp"
                    android:layout_marginRight="10dp"/>


            </FrameLayout>



            </FrameLayout>

        </LinearLayout>
            
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>