<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/mentorprofilepic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#dadada"
            android:background="@drawable/darkgreyround"
            android:src="@drawable/darkgreyround"/>

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lightgreyround"/>

            <TextView
                android:id="@+id/mentorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Cooper"
                android:textStyle="bold"
                android:textSize="10dp"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1500/Session"
                android:textSize="5dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:textColor="#ecb800"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="UX Designer @ Google"
                android:textSize="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="● Available"
                android:textColor="#3ead00"
                android:textSize="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="❤"
                android:layout_gravity="right"
                android:textSize="8dp"
                android:layout_marginRight="10dp"/>


        </FrameLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>