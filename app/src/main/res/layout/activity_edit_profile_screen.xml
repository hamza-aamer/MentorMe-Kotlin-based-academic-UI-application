<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#def8f8"
    tools:context=".EditProfileScreen">


    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:background="#50c2c9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/BackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:focusable="true"
            android:text="←"
            android:textColor="#157177"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/BackArrow"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/john"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/NameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:textColor="#157177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic"
        android:layout_marginLeft="30dp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/NameText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/whiteround"
        app:layout_constraintTop_toBottomOf="@id/NameTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:paddingHorizontal="10dp"
        android:hint="Ali"
        android:layout_marginHorizontal="30dp"
        />

    <TextView
        android:id="@+id/EmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:textColor="#157177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"

        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/EmailText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/whiteround"
        android:textSize="20dp"
        android:paddingHorizontal="10dp"
        android:hint="ali@gmail.com"
        app:layout_constraintTop_toBottomOf="@id/EmailTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        />

    <TextView
        android:id="@+id/NumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:textSize="20dp"
        android:textColor="#157177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"

        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/NumberText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/whiteround"
        android:textSize="20dp"
        android:paddingHorizontal="10dp"
        android:hint="+92 321 2242022"
        app:layout_constraintTop_toBottomOf="@id/NumberTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        />

    <TextView
        android:id="@+id/CountryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:textSize="20dp"
        android:textColor="#157177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NumberText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"

        tools:ignore="MissingConstraints" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/CountryTitle"
        android:id="@+id/CountryList"
        android:background="@drawable/whiteround"
        android:textSize="20dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        />
    <TextView
        android:id="@+id/CityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="20dp"
        android:textColor="#157177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CountryList"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"

        tools:ignore="MissingConstraints" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/CityTitle"
        android:id="@+id/CityList"
        android:background="@drawable/whiteround"
        android:textSize="20dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        />


    <TextView
        android:clickable="true"
        android:id="@+id/editprofile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/twofactorverifybutton"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="Update Profile"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>