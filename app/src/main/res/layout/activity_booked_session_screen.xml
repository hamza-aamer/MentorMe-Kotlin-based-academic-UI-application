<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/empty"
    tools:context=".BookedSessionScreen">


    <LinearLayout
        android:id="@+id/toprow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/BackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:focusable="true"
            android:text="â†"
            android:textColor="#157177"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Booked Sessions"
            android:textColor="#157177"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        app:layout_constraintTop_toBottomOf="@id/toprow"
        android:orientation="vertical">

        <FrameLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/user1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#dadada"
                android:src="@drawable/johnsquare"/>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/lightgreyround"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Cooper"
                    android:textColor="#157177"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24th Dec 2023\n1:00 pm"
                    android:textSize="10sp"
                    android:textStyle="bold"

                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:textColor="#ecb800"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="UX Designer @ Google"
                    android:textSize="8dp"
                    android:layout_marginLeft="10dp"/>



            </FrameLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#dadada"
                android:src="@drawable/emmasquare"/>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/lightgreyround"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Martina Watson"
                    android:textStyle="bold"
                    android:textColor="#157177"
                    android:textSize="12dp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1st Jan 2024\n09:00 pm"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:textColor="#ecb800"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Lead - Technology Officer"
                    android:textSize="8dp"
                    android:layout_marginLeft="10dp"/>


            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>